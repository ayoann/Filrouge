{% extends '::base.html.twig' %}


{% block body %}
<div class="container">
  <br>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="../images/scandal-banner_season4.jpg" alt="Scandal" >
      </div>

      <div class="item">
        <img src="../images/the-walking-dead-season-4.jpg" alt="The Walking Dead" >
      </div>
    
      <div class="item">
        <img id="item" src="../images/animaatjes-lie-to-me-4431743.jpg" alt="Lie to me">
      </div>

      <div class="item">
        <img src="../images/the-big-bang-theory.jpg" alt="The Big Bang Theory">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="row">
    <div class="col-xs-5">
      <div id="divh42" class="col-xs-12"><h4>Dernières Séries ajoutées</h4></div>
      <div id="serieindex" class="col-xs-12">
        {% for serie in series %}
            <div class="col-xs-6 col-sm-3 col-md-3 col-lg-4 ">
              <figure>
                <a id="series" href="{{ path('sériesone', { 'id' : serie.id})}}"><img id="imgserieindex" class="img-responsive" src="{{ serie.posterSerie }}" alt="poster"></a>
              </figure>
            </div>
        {% endfor %}
      </div>

    </div>
      <div id="youtube" class="col-xs-5">
      <div id="divh4" class="col-md-12"><h4>Dernières vidéos</h4></div>
        <iframe width="400" height="250" src="https://www.youtube.com/embed/dBUQKEwSjos" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
</div>
   
{% endblock %}