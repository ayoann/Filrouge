{% trans_default_domain 'FOSUserBundle' %}

{% if is_granted("ROLE_SUPER_ADMIN") %}
<div class="row">
	<div id="profile" class="col-xs-3 col-xs-offset-1 col-md-2 col-md-offset-2 col-lg-2 col-lg-offset-1">
			<img src="http://thesocialmediamonthly.com/wp-content/uploads/2015/08/photo.png">
			<p>{{ 'Nom'|trans }}: {{ user.lastName }}</p>
			<p>{{ 'Prénom'|trans }}: {{ user.firstName }}</p>
			<p>{{ 'Pseudo'|trans }}: {{ user.username }}</p>
			<p>{{ 'Email'|trans }}: {{ user.email }}</p>
	</div>
	<div id="profile" class="col-xs-4 col-xs-offset-1">
		<h4 class="text-center">Série Suivis</h4>
		{% for serie in user.follow %}
			<div class="col-xs-6 col-sm-4 col-lg-4">
					<a href="{{ path('sériesone',{'id':serie.id}) }}">
						<img id="imgsuivi" src="{{ asset(serie.posterSerie) }}" alt="{{ serie.nomSerie }}" class="img-responsive">
					</a>
			</div>
		{% endfor %}
	</div>
	<div id="user" class="col-xs-3 col-xs-offset-8 col-sm-2 col-sm-offset-8 col-lg-2 col-lg-offset-9">
		{% for user in users %}
			<div class="col-lg-12 ">
				<li><a href="{{ path('fos_user_profile_user', { 'id': user.id }) }}">{{ user.username }}</a></li>
			</div>
		{% endfor %}
	</div>
</div>
	<div class="row">
		<div id="profile" class="col-xs-3 col-xs-offset-1 col-md-2 col-md-offset-2 col-lg-2 col-lg-offset-1">
				<h2 class="text-center"><strong> {{ user.follow|length }} </strong></h2>
				<p class="text-center">Series Suivies</p>
		</div>
	</div>
{% else %}
<div class="row">
	<div id="profile" class="col-xs-3 col-xs-offset-1 col-sm-2 col-sm-offset-2 col-lg-2 col-lg-offset-1">
		<img src="http://thesocialmediamonthly.com/wp-content/uploads/2015/08/photo.png" width="30" height="100">
		<p>{{ 'Nom'|trans }}: {{ user.lastName }}</p>
		<p>{{ 'Prénom'|trans }}: {{ user.firstName }}</p>
		<p>{{ 'Pseudo'|trans }}: {{ user.username }}</p>
		<p>{{ 'Email'|trans }}: {{ user.email }}</p>
	</div>
	<div id="profile" class="col-xs-4 col-xs-offset-1">
		<h4 class="text-center">Série Suivis</h4>
		{% for serie in user.follow %}
			<div class="col-xs-6 col-sm-4 col-lg-4">
				<a href="{{ path('sériesone',{'id':serie.id}) }}">
					<img id="imgsuivi" src="{{ asset(serie.posterSerie) }}" alt="{{ serie.nomSerie }}" class="img-responsive">
				</a>
			</div>
		{% endfor %}
	</div>
	<div id="user" class="col-xs-3 col-xs-offset-8 col-sm-2 col-sm-offset-8 col-lg-2 col-lg-offset-9">
		{% for user in users %}
			<div class="col-lg-12 ">
				<li><a href="{{ path('fos_user_profile_user', { 'id': user.id }) }}">{{ user.username }}</a></li>
			</div>
		{% endfor %}
	</div>
</div>
	<div class="row">
		<div id="profile" class="col-xs-3 col-xs-offset-1 col-md-2 col-md-offset-2 col-lg-2 col-lg-offset-1">
			<h2 class="text-center"><strong> {{ user.follow|length }} </strong></h2>
			<p class="text-center">Series Suivies</p>
		</div>
	</div>

{% endif %}







