<div class="row">
	<div id="profile" class="col-xs-3 col-xs-offset-1 col-md-2 col-md-offset-2 col-lg-1 col-lg-offset-3">
			<img src="http://thesocialmediamonthly.com/wp-content/uploads/2015/08/photo.png">
			<p>{{ 'Nom'|trans }}: {{ user.lastName }}</p>
			<p>{{ 'Prénom'|trans }}: {{ user.firstName }}</p>
			<p>{{ 'Pseudo'|trans }}: {{ user.username }}</p>
			<p>{{ 'Email'|trans }}: {{ user.email }}</p>
	</div>
</div>
{% else %}
<div class="row">
	<div id="profile" class="col-xs-3 col-xs-offset-1 col-sm-2 col-sm-offset-2 col-lg-2 col-lg-offset-3">
		<img src="http://thesocialmediamonthly.com/wp-content/uploads/2015/08/photo.png" width="30" height="100">
		<p>{{ 'Nom'|trans }}: {{ user.lastName }}</p>
		<p>{{ 'Prénom'|trans }}: {{ user.firstName }}</p>
		<p>{{ 'Pseudo'|trans }}: {{ user.username }}</p>
		<p>{{ 'Email'|trans }}: {{ user.email }}</p>
	</div>
</div>

{% endif %}
<div id="user" class="col-xs-3 col-xs-offset-8 col-sm-2 col-sm-offset-8 col-lg-1 col-lg-offset-8">


	{% for user in users %}
	<div class="col-lg-12 ">
		<li><a href="{{ path('fos_user_profile_user', { 'id': user.id }) }}">{{ user.username }}</a></li>
	</div>
	{% endfor %}

</div>





