{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
	<div id="colorform" class="col-xs-3">
		<form action="{{ path("fos_user_security_check") }}" method="post">
		    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

		    <label for="username">{{ 'Pseudo :'|trans }}</label>
		    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

		    <label for="password">{{ 'Password :'|trans }}</label>
		    <input class="form-control" type="password" id="password" name="_password" required="required" />
			<div class="checkbox col-xs-offset-1">
		    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
		    	<label for="remember_me">{{ 'Se souvenir de moi'|trans }}</label>
			</div>
		    <input class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Log In'|trans }}" />
		    <input id="signin" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Sign In'|trans }}" />
		</form>
	</div>

{% endblock fos_user_content %}
