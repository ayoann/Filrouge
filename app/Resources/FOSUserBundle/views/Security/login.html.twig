{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
	<div id="colorform" class="col-xs-3 col-xs-offset-2">
		<form action="{{ path("fos_user_security_check") }}" method="post">
		    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

		    <label for="username">{{ 'Pseudo :'|trans }}</label>
		    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

		    <label for="password">{{ 'Password :'|trans }}</label>
		    <input class="form-control" type="password" id="password" name="_password" required="required" />
			<div class="checkbox col-xs-offset-1">
		    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
		    	<label for="remember_me">{{ 'Se souvenir de moi'|trans }}</label>
			</div>
		    <input class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" />
		</form>
		<a id="motdepasse" class="col-xs-8" href="{{path('fos_user_resetting_request')}}">Mot de passe oublié</a>
	</div>
	<div id="SignIn" class="col-xs-3 col-xs-offset-2">
		<h3 id="h3" class="col-xs-12">Vous n'avez pas de compte ?</h3>
		<p class="col-xs-12">Inscrivez-vous dès maintenant, et profitez de l'expérience Watch !</p>
		<a class="col-xs-2" href="{{ path('fos_user_registration_register')}}">
		<input id="signin" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="Créer un compte" /></a>
	</div>

{% endblock fos_user_content %}