    <body>
        <header>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% if is_granted("ROLE_SUPER_ADMIN") %}
            <div class="row">
                <a class="col-xs-1 col-lg-1 col-xs-offset-8 col-lg-offset-9" href="{{ path ('admin') }}"><input id="admin" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Espace Admin'|trans({}, 'FOSUserBundle') }}" /></a>
                <a class="col-xs-2  col-sm-2  col-lg-2 " href="{{ path('fos_user_security_logout') }}"><input id="deconnexion" class="btn btn-danger"  type="submit" id="_submit" name="_submit" value="{{ 'Déconnexion'|trans({}, 'FOSUserBundle') }}" /></a>
            </div>
                {% endif %}
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div class="row">
                    <a class="col-xs-1 col-lg-1 col-xs-offset-8 col-lg-offset-9" href="{{ path ('fos_user_profile_show') }}"><input id="espmembres" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Espace Membres'|trans({}, 'FOSUserBundle') }}" /></a>
                    <a class="col-xs-2  col-sm-2  col-lg-2 " href="{{ path('fos_user_security_logout') }}"><input id="deconnexion" class="btn btn-danger"  type="submit" id="_submit" name="_submit" value="{{ 'Déconnexion'|trans({}, 'FOSUserBundle') }}" /></a>
                </div>
                {% endif %}
            {% else %}
                <a class="col-xs-1 col-xs-offset-8 col-lg-1 col-lg-offset-9" href="{{ path('fos_user_security_login')}}"><input id="connexion" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" /></a>
                <a class="col-xs-2 col-lg-1 " href="{{ path('fos_user_registration_register')}}">
                <input id="creercompte" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="Créer un compte" /></a>
            {% endif %}
