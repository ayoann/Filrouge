<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenue{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/dcsrating/css/rating.css') }}" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    </head>
    <body>
        <header>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div class="row">
                <a class="col-xs-2  col-sm-2  col-lg-2 col-lg-offset-10 " href="{{ path('fos_user_security_logout') }}"><input id="deconnexion" class="btn btn-danger"  type="submit" id="_submit" name="_submit" value="{{ 'Déconnexion'|trans({}, 'FOSUserBundle') }}" /></a>
            </div>
            {% else %}
                <a class="col-xs-1 col-xs-offset-8 col-lg-1 col-lg-offset-9" href="{{ path('fos_user_security_login')}}"><input id="connexion" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" /></a>
                <a class="col-xs-2 col-lg-1 " href="{{ path('fos_user_registration_register')}}">
                <input id="creercompte" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="Créer un compte" /></a>
            {% endif %}
        <div class="container-fluid">
            <div class="row">
                <nav class="col-xs-12 col-sm-12 col-md-12">
                    <div class="container">
                        <a href="{{ path('homepage') }}"><div id="Accueil" class="col-xs-2 text-center">Accueil</div></a>
                        <a href="{{ path('séries') }}"><div id="News"class="col-xs-2 text-center">Séries</div> 
                        <a href="#"><div id="Series" class="col-xs-3 text-center">Programmes Séries</div> </a>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><div id="Membres" class="col-xs-2 text-center">Membres</div></a>
                                <ul id="slide" class="dropdown-menu">
                                    <li><a href="{{ path('fos_user_profile_show') }}">Espace Membres</a></li>
                                    <li><a href="{{ path('fos_message_inbox') }}">Messagerie ({{ fos_message_nb_unread() }})</a></li>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                        <li role="separator" class="divider"></li>
                                        <li><a href="{{ path ('admin') }}">Espace Admin</a></li>
                                    {% endif %}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li role="separator" class="divider"></li>
                                        <li><a href="{{ path ('moderation') }}">Espace Modérateur</a></li>
                                    {% endif %}
                                </ul>
                        {% else %}
                        <a href="{{ path('fos_user_security_login') }}"><div id="Membres" class="col-xs-2 text-center">Membres</div></a>
                        {% endif %}
                        <a target="_blank" href="http://igleseyes.cmonfofo.com/"><div id="forum" class="col-xs-3 text-center">Forum</div></a>
                    </div>
                </nav>
            </div>
        </div>
        </header>
        {% block body %}

        {% endblock %}
        <!-- <div class="container-fluid">
            <div class="row">
                <footer class="text-center">
                    <p>Copyright Igles</p>
                </footer>
            </div>
        </div> -->
        <script src="{{ asset('bundles/dcsrating/js/rating.js') }}"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    </body>
</html>
