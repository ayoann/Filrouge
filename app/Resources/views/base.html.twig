<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenue{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    </head>
    <body>
        <header>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                 <a class="col-xs-1 col-xs-offset-10" href="{{ path('fos_user_security_logout') }}"><input id="connexion" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Déconnexion'|trans({}, 'FOSUserBundle') }}" /></a>

            {% else %}
                <a class="col-xs-1 col-xs-offset-9" href="{{ path('fos_user_security_login')}}"><input id="connexion" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" /></a>
                <a class="col-xs-2" href="{{ path('fos_user_registration_register')}}">
                <input id="signin" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="Créer un compte" /></a>
            {% endif %}
        </header>
        <div class="container-fluid">
            <div class="row">
                <nav class="col-xs-12 ">
                    <div class="container">
                        <a href="{{ path('homepage') }}"><div id="Accueil"class="col-xs-2 text-center">Accueil</div></a>
                        <a href="{{ path('séries') }}"><div id="News"class="col-xs-2 text-center">Séries</div> 
                        <a href="#"><div id="Series" class="col-xs-4 text-center">Programmes Séries</div> </a>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a href="{{ path('fos_user_profile_show') }}"><div id="Membres" class="col-xs-2 text-center">Membres</div></a>
                        {% else %}
                        <a href="{{ path('fos_user_security_login') }}"><div id="Membres" class="col-xs-2 text-center">Membres</div></a>
                        {% endif %}
                        <a href="#"><div id="programmes" class="col-xs-2 text-center">Forum</div></a>
                    </div>
                </nav>
            </div>
        </div>
        {% block body %}

        {% endblock %}
        <!-- <div class="container-fluid">
            <div class="row">
                <footer class="text-center">
                    <p>Copyright Igles</p>
                </footer>
            </div>
        </div> -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    </body>
</html>
