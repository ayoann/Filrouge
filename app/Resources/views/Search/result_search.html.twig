{% extends '::base.html.twig' %}

{% block body %}

    <div class="row">
        <h1 class="col-xs-10 col-xs-offset-1 text-center">Résultats de recherche "{{ search }}"</h1>
    </div>

    <div class="row">
        <h3 id="search" class="col-xs-10 col-xs-offset-1 text-center">Series</h3>
    </div>

        <div class="row">
            {% for serie in series %}
                <a href="{{ path('sériesone',{'id':serie.id}) }}">
                    <div class="col-xs-offset-1">
                        <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
                            <figure>
                                <a id="series" href="{{ path('sériesone', { 'id' : serie.id})}}"><figcaption id="searchnomserie" class="col-xs-8 text-center" >{{ serie.nomSerie }}</figcaption></a>
                                <a id="series" href="{{ path('sériesone', { 'id' : serie.id})}}"><img id="imgserie" class="img-responsive" src="{{ serie.seriePoster.getWebPath }}" alt="poster"></a>
                            </figure>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>

    <div class="row">
        <h3 id="search" class="col-xs-10 col-xs-offset-1 text-center">Episodes</h3>
    </div>
    <div class="row">
        {% for episode in episodes %}
            <a href="{{ path('episode',{'id':episode.id}) }}">
                <div class="col-xs-offset-1">
                    <div class="col-xs-6 col-sm-3 col-md-3 col-lg-6">
                        <figure>
                            <a id="series" href="{{ path('episode', { 'id' : episode.id})}}"><figcaption id="searchnomepisode" class="col-xs-8 text-center" >{{ episode.nomEpisode }}</figcaption></a>
                            <a id="series" href="{{ path('episode', { 'id' : episode.id})}}"><img id="imgseriesearch" class="img-responsive" src="{{ episode.posterEpisode }}" alt="poster"></a>
                        </figure>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}