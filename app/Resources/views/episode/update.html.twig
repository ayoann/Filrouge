{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-xs-4 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-6 col-md-offset-1 col-lg-4 col-lg-offset-1">
        <ol class="breadcrumb">
            <li><a id="fil" href="{{ path('homepage') }}">Accueil</a></li>
            <li><a id="fil" href="{{ path('séries') }}">Saisons</a></li>
            <li class="active" >Episode {{ episode.numeroEpisode}}</li>
        </ol>
    </div>
    <a class="col-xs-1 col-xs-offset-4" href="{{ path('episode',{'id':episode.id})}}"><button id="connexion" class="btn btn-default"  type="submit" id="_submit" name="_submit" value="{{ 'Valider'}}" />Revenir à la liste</button></a>
</div>
<div class="row">        
</div>
<div class="row">
    <div id="formcolor" class="col-xs-6 col-xs-offset-3">
        <h1 class="text-center">Modifier Episodes</h1>
            {{ form_start(update_form) }}
        <div>
            {{ form_label(update_form.nomEpisode) }}
            {{ form_widget(update_form.nomEpisode, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div>
            {{ form_widget(update_form.episodePoster) }}
        </div>
        <div>
            {{ form_label(update_form.numeroEpisode) }}
            {{ form_widget(update_form.numeroEpisode, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div>
            {{ form_label(update_form.resumeEpisode) }}
            {{ form_widget(update_form.resumeEpisode, {'attr': {'class': 'form-control'}}) }}
        </div>
            <a class="col-lg-2 col-lg-offset-10" href="{{ path('saison')}}"><button id="valider" class="btn btn-success"  type="submit" id="_submit" name="_submit" value="{{ 'Valider'}}">Valider</button></a>
        {{ form_end(update_form) }}
    </div>
</div>
{% endblock %}
                