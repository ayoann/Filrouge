{% extends '::base.html.twig' %}


{% block body %}
	<div class="col-xs-6 col-xs-offset-2">
		<ol class="breadcrumb">
	  		<li><a id="fil" href="{{ path('homepage') }}">Accueil</a></li>
	  		<li><a id="fil" href="{{ path('séries')}}">Séries</a></li>
	  		<li class="active" >Saison</li>
		</ol>
	</div>
	<div class="row" >
		<div class="col-xs-3 col-xs-offset-2 ">
			<h3>{{ saisons.numeroSaisons }}</h3>
		</div>
		
	</div>
<div class="row">
		<div class="col-xs-4 col-xs-offset-2">
	   			<img id="imagesaison2" src="{{ saisons.posterSaisons }}" alt="poster">
		</div>
	<div class="col-xs-2 col-xs-offset-2 text-center">
		<div id="divsaison">
			{% for saison in saisons.episodes %}
				<a id="episodeslink" href="{{ path('episode', { 'id' : saison.id})}}"><p>{{ saison.numeroEpisode}}</p></a>
			{% endfor %}
		</div>
	</div>	
</div>
<div class="row">
	<div class="col-xs-6 col-xs-offset-2">
		<div id="divresume">
			<p id="resume" class="text-justify">{{ saisons.resumeSaisons }}</p>
		</div>
	</div>
</div>
{% endblock %}