{% extends '::base.html.twig' %}


{% block body %}
	<div class="row">
		<div class="col-xs-4 col-xs-offset-2 col-lg-4 col-lg-offset-3">
			<form class="navbar-form navbar-left" role="Search" method="POST" action="{{ path('search') }}">
				<div class="form-group">
					<input type="text" name="search" class="form-control" placeholder="Rechercher">
				</div>
				<button type="submit" class="btn btn-default">Valider</button>
			</form>
		</div>
		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			<a class="col-xs-1 col-xs-offset-2" href="{{ path('serie_new')}}"><button  id="ajouter" class="btn btn-success"  type="submit" id="_submit" name="_submit" value="{{ 'Ajouter'}}" />Ajouter</button></a>
		{% endif %}
	</div>
	<div class="row">
		{% for serie in series %}
			<div class="col-xs-offset-1">
				<div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
					<figure>
						<a id="series" href="{{ path('sériesone', { 'id' : serie.id})}}"><figcaption id="searchnomserie" class="col-lg-8 text-center" >{{ serie.nomSerie }}</figcaption></a>
						<a id="series" href="{{ path('sériesone', { 'id' : serie.id})}}"><img id="imgserie" class="img-responsive" src="{{ serie.posterSerie }}" alt="poster"></a>
					</figure>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

