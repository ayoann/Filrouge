{% extends '::base.html.twig' %}
{% block body %}
<div class="row">
    <div class="col-xs-6 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-6 col-md-offset-1 col-lg-4 col-lg-offset-1">
        <ol class="breadcrumb">
            <li><a id="fil" href="{{ path('homepage') }}">Accueil</a></li>
            <li><a id="fil" href="{{ path('séries') }}">Séries</a></li>
            <li class="active" >{{ series.nomSerie }}</li>
        </ol>
    </div>
</div>
    <div class="row">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <a class="col-xs-1 col-xs-offset-9" href="{{ path('serie_update', { 'id' : series.id})}}"><button  class="btn btn-warning"  type="submit" id="_submit" name="_submit" value="{{ ' Modifier'}}" /> Modif série </button></a>
        <a class="col-xs-1 " href="{{ path('serie_delete', { 'id' : series.id})}}"><button  class="btn btn-danger"  type="submit" id="_submit" name="_submit" value="{{ 'Supprimer'}}" />Supprimer série</button></a>
        <a class="col-xs-1 col-xs-offset-9" href="{{ path('saison_new', { 'id' : series.id})}}"><button  class="btn btn-warning"  type="submit" id="_submit" name="_submit" value="{{ 'Ajouter'}}" />Ajouter saison</button></a>
        
        
        {% endif %}
    </div>
    <div class="row">
            <div class="col-xs-5 col-xs-offset-1 col-lg-7 col-lg-offset-1">
                <h2>{{ series.nomSerie }}</h2></a>
    {% include 'DCSRatingBundle:Rating:rating.html.twig' with {'id' : series.id} %}
            </div>
        </div>
    <div class="row">
        <div class="col-xs-3 col-xs-offset-1 col-lg-2 col-lg-offset-1">
                <img id="imagesaison" src="{{ series.posterSerie }}" alt="poster">
        </div>
        <div class="col-xs-2 col-xs-offset-1 col-lg-2 text-center">
            <div id="divsaison">
                {% for serie in series.saisons %}
                    <a id="saisons" href="{{ path('saisonone', { 'id' : serie.id})}}"><p>{{ serie.numeroSaisons }}</p></a>
                {% endfor %}
            </div>    
        </div>
    </div>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <div class="row">
        <div id="suivre" class="col-xs-2 col-xs-offset-1">
        {% if app.user.Suivre(series) %}
            <a href="{{ path('follow',{'id':series.id}) }}" class="btn btn-primary" >Ne plus suivre</a>
        {% else %}
            <a href="{{ path('follow',{'id':series.id}) }}" class="btn btn-primary ">Suivre</a>
        {% endif %}
        </div>
    </div>
    {% endif %}
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-lg-10 col-lg-offset-1 text-justify">
            <div id="divresume">
                <h3>Synopsis :</h3>
                <p id="resume" class="text-justify">{{ series.resumeSerie }}</p>
            </div>    
        </div>
    </div>
    {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': series.id} %}
    {% include 'DCSRatingBundle:Rating:control.html.twig' with {'id' : series.id, 'role' : 'ROLE_USER'} %}
{% endblock %}